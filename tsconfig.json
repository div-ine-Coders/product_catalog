{
  "extends": "@mate-academy/students-ts-config",
  "include": [
    "src",
    ".eslintrc.js"
  ],
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": false,
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@constants/*": ["constants/*"],
      "@hooks/*": ["hooks/*"],
      "@styles/*": ["styles/*"],
      "@models/*": ["types/*"],
    }
  }
}
